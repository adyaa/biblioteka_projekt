@model IEnumerable<DatabaseModel.PurchaseTable>

@{
    ViewBag.Title = "Lista dokonanych zamówień";
}
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Zamówienia</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            ID zamówienia
                        </th>
                        <th>
                            Nazwa dostawcy
                        </th>
                        <th>
                            Data zamówienia
                        </th>
                        <th>
                            Kwota zamówienia
                        </th>
                        <th>
                            Zamawiający
                        </th>
                        <th>Opcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierTable.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PurchaseDate)
                        </td>
                        <td>
                            @(string.Format("{0:0.00}", Math.Truncate(item.PurchaseAmount *10)/10)) zł
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserTable.UserName)
                        </td>
                        <td>

                            @Html.ActionLink("Szczegóły", "PurchaseDetailsView", new { id = item.PurchaseID }, new { @class = "btn btn-info" })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>